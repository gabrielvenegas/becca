  "private": true,
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "compile-dev": "node ./dist/app.js",
    "dev": "tsc-watch --onSuccess \"yarn run compile-dev\"",
    "pretest": "eslint --ignore-path .gitignore src/api/**/*.ts --fix",
    "transpile": "tsc",
    "add-migration": "tsc && ts-node ./node_modules/typeorm/cli.js migration:generate",
    "update-database": "tsc && node -r dotenv/config -r ./node_modules/ts-node/register ./node_modules/typeorm/cli.js migration:run --config ormconfig.js",
    "revert-database": "tsc && node -r dotenv/config -r ./node_modules/ts-node/register ./node_modules/typeorm/cli.js migration:revert --config ormconfig.js",
    "build": "(echo \"[ Building project ]\" && tsc && echo \"[ Finish building project ]\") && (echo \"[ Updating database ]\" && yarn run update-database && echo \"[ Finish updating database ]\"))"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn run pretest"
    }
  },
  "keywords": [],
